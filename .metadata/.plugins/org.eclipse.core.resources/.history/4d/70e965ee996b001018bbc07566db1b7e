package com.wellcare.controllers;
@RestController
@RequestMapping("/auth")
@RequiredArgsConstructor
public class AuthController {

    private final UserService userService;

    @PostMapping("/register")
    public ResponseEntity<AuthResponseDto> register(@RequestBody @Valid UserDto userDto) {
        AuthResponseDto response = userService.registerUser(userDto);
        return ResponseEntity.ok(response);
    }

    @PostMapping("/login")
    public ResponseEntity<AuthResponseDto> login(@RequestBody @Valid AuthRequestDto request) {
        AuthResponseDto response = userService.loginUser(request);
        return ResponseEntity.ok(response);
    }
}
